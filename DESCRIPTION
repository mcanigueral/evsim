Package: evsim
Title: Electric Vehicle Charging Sessions Simulation
Version: 1.2.0
Authors@R: 
    person(given = "Marc",
           family = "Cañigueral",
           role = c("aut", "cre"),
           email = "marc.canigueral@udg.edu",
           comment = c(ORCID = "0000-0001-9724-5829")
